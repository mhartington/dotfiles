#!/bin/zsh

autoload -Uz vcs_info
autoload -U add-zsh-hook
autoload -Uz async && async

setopt PROMPT_SUBST
zstyle ':vcs_info:*' enable git
zstyle ':vcs_info:git:*' formats "ï˜ %b"

add-zsh-hook precmd precmd_vcs_info
add-zsh-hook precmd __prompt

prompt_line_sep=$'\n'


