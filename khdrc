# reload config
alt - r : khd -e "reload"

# open terminal, blazingly fast compared to iTerm/Hyper
alt - f : open /Applications/Kitty.app
alt - s : open /Applications/Safari.app
shift+alt - s : open /Applications/Safari\ Technology\ Preview.app
alt - c : open /Applications/Google\ Chrome.app
alt - d : open /Applications/Slack.app
alt - t : open /Applications/Messages.app
alt - e : open /Applications/Xcode.app/Contents/Developer/Applications/Simulator.app

# focus window
# alt - h : chunkc tiling::window --focus west
# alt - j : chunkc tiling::window --focus south
# alt - k : chunkc tiling::window --focus north
# alt - l : chunkc tiling::window --focus east
#
# cmd - j : chunkc tiling::window --focus prev
# cmd - k : chunkc tiling::window --focus next

# equalize size of windows
